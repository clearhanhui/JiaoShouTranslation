<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_news"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tv_title_item_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_item_news"
        android:textSize="18sp"
        android:textColor="#111111" />
    <TextView
        android:id="@+id/tv_sources_item_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_date_item_news"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />
    <TextView
        android:id="@+id/tv_date_item_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_item_news"
        android:layout_marginBottom="1dp"/>

</RelativeLayout>
